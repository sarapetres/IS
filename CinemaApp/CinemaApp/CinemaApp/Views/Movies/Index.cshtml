@model IEnumerable<Shop.Domain.DomainModels.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titleMovie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descriptionMovie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.yearRelease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.moviePoster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titleMovie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descriptionMovie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.yearRelease)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.moviePoster)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.genre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
